        /* CSS cho bảng sản phẩm */
        table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed; /* Cố định chiều rộng của bảng */
        }

        table, th, td {
            border: 1px solid black;
            
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            position: sticky; /* Cố định vị trí */
            top: 0; /* Cố định ở đầu bảng */
            z-index: 10; /* Đặt z-index cao để th có thể nổi bật hơn */
        }

        /* Cố định các cột */
        th:nth-child(1),
        td:nth-child(1) {
            position: sticky;
            left: 0;
            background-color: white;
            z-index: 5; /* Để không bị chồng lên bởi các cột khác */
            width: 100px; /* Chiều rộng cột mã vạch */
            overflow: hidden; /* Ẩn nội dung khi vượt quá chiều rộng */
            text-overflow: ellipsis; /* Hiển thị dấu '...' khi nội dung bị cắt */
            white-space: nowrap; /* Không xuống dòng trong ô */
        }

        th:nth-child(2),
        td:nth-child(2) {
            position: sticky;
            left: 100px; /* Cố định theo vị trí */
            background-color: white;
            z-index: 5;
            width: 150px; /* Chiều rộng cột tên sản phẩm */
            overflow: hidden; /* Ẩn nội dung khi vượt quá chiều rộng */
            text-overflow: ellipsis; /* Hiển thị dấu '...' khi nội dung bị cắt */
            white-space: nowrap; /* Không xuống dòng trong ô */
        }

        th:nth-child(3),
        td:nth-child(3) {
            width: 120px; /* Chiều rộng cột giá nhập */
        }

        th:nth-child(4),
        td:nth-child(4) {
            width: 120px; /* Chiều rộng cột giá bán lẻ */
        }

        th:nth-child(5),
        td:nth-child(5) {
            width: 120px; /* Chiều rộng cột danh mục */
        }

        th:nth-child(6),
        td:nth-child(6) {
            margin-left: 15px;
            height: 100px;
            width: 120px; /* Chiều rộng cột hình ảnh */
            object-fit: cover;
        }

        th:nth-child(7),
        td:nth-child(7) {
            position: relative; /* Để cho cột mô tả có thể rộng hơn */
            width: 300px; /* Chiều rộng cột mô tả */
            height: 50px; /* Chiều cao cố định cho ô mô tả */
            overflow: hidden; /* Ẩn nội dung khi nó vượt quá chiều cao */
            text-overflow: ellipsis; /* Hiển thị dấu '...' khi nội dung bị cắt */
            white-space: nowrap; /* Không xuống dòng trong ô */
        }

        th:nth-child(8),
        td:nth-child(8) {
            position: sticky;
            right: 0; /* Cố định bên phải */
