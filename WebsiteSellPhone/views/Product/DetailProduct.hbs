<div class="container mt-5">
  <div class="card shadow">
    <div class="card-body">
      {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
          {{errorMessage}}
        </div>
      {{/if}}
      <div class="row">
        <div class="col-md-4 text-center">
          <img src="/img/imgproduct/{{product.image_url}}" class="img-fluid rounded" alt="{{product.name}}">
        </div>
        <div class="col-md-8">
          <h3 class="card-title">{{product.name}}</h3>
          <p class="card-text"><strong>Danh mục:</strong> {{product.category}}</p>
          <p class="card-text"><strong>Giá:</strong> {{product.retail_price}} VNĐ</p>
          <p class="card-text"><strong>Mô tả:</strong> {{product.description}}</p>
        </div>
      </div>
      <div class="text-center mt-4">
        <a href="/products/update/{{product._id}}" class="btn btn-primary">Chỉnh sửa</a>
        <!-- Thay form xóa bằng AJAX -->
        <button class="btn btn-danger" id="deleteButton" data-product-id="{{product._id}}">Xóa</button>
      </div>
      <div class="text-center mt-3">
        <a href="/products" class="btn btn-secondary">Quay lại danh sách sản phẩm</a>
      </div>
    </div>
  </div>
</div>

<script>
  // Thêm event listener vào nút xóa
  document.getElementById('deleteButton').addEventListener('click', function() {
    const productId = this.getAttribute('data-product-id');
    
    if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')) {
      // Gửi yêu cầu xóa sản phẩm qua AJAX
      fetch(`/products/delete/${productId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        if (data.errorMessage) {
          // Nếu có lỗi, hiển thị thông báo lỗi
          alert(data.errorMessage);
        } else {
          // Nếu xóa thành công, hiển thị thông báo và quay lại danh sách sản phẩm
          alert('Sản phẩm đã được xóa!');
          window.location.href = '/products';
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Có lỗi khi xóa sản phẩm!');
      });
    }
  });
</script>





