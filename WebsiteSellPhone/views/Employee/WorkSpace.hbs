        <div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <h4>Danh sách sản phẩm</h4>
      <div class="col-md-4 ml-auto">
        <form action="/products/search" method="GET" class="input-group mb-3">
          <input type="text" name="query" class="form-control" placeholder="Tìm kiếm sản phẩm..." value="{{query}}">
          <div class="input-group-append">
            <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
          </div>
        </form>
      </div>
    </div>

    <div class="row">
      {{#if products.length}}
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead class="thead-light">
            <tr>
              <th>Mã vạch</th>
              <th>Tên sản phẩm</th>
              <th>Giá nhập</th>
              <th>Giá bán lẻ</th>
              <th>Danh mục</th>
              <th>Hình ảnh</th>
              <th>Mô tả</th>
              <th>Hành động</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>
              <td>{{this.barcode}}</td>
              <td>{{this.name}}</td>
              <td>{{this.import_price}} ₫</td>
              <td>{{this.retail_price}} ₫</td>
              <td>{{this.category}}</td>
              <td class="text-center">
                <img src="/img/imgproduct/{{this.image_url}}" alt="{{this.name}}" style="width: 120px; height: auto;">
              </td>
              <td class="text-truncate" style="max-width: 300px;">{{this.description}}</td>
              <td>
                <a href="/products/wk/detail/{{this._id}}" class="btn btn-info btn-sm mb-1">Chi tiết</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <p>Không có sản phẩm nào được tìm thấy.</p>
      {{/if}}
    </div>
