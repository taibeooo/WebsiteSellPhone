    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btnEdit = document.querySelector('.btn-edit');
            const btnSubmit = document.querySelector('.btn-submit');
            const inputs = document.querySelectorAll('input[readonly], input[type="file"]'); // Tìm tất cả các input readonly và input file
            const fileInput = document.querySelector('#image_url'); 
            const genderInput = document.querySelector('.gender'); 
            const birthdayInput = document.querySelector('.birthday'); 

            btnEdit.addEventListener('click', function () {
                if (btnEdit.textContent === 'Chỉnh sửa thông tin') {
                    btnSubmit.disabled = false;

                    btnSubmit.style.backgroundColor = '#28a745'; // Xanh lá
                    btnSubmit.style.cursor = 'pointer';

                    btnEdit.textContent = 'Hủy'; 
                    btnEdit.style.backgroundColor = '#dc3545'; // Màu đỏ
                    btnEdit.style.cursor = 'pointer'; 

                    // Bỏ thuộc tính readonly cho các input
                    inputs.forEach(input => {
                        input.removeAttribute('readonly'); // Bỏ readonly cho các input
                    });

                    // Hiển thị input file
                    fileInput.removeAttribute('hidden');

                    // Thay đổi gender input thành select với các lựa chọn Nam, Nữ, Khác
                    if (genderInput.tagName.toLowerCase() === 'input') {
                        const selectGender = document.createElement('select');
                        selectGender.classList.add('form-control');
                        selectGender.name = 'gender';

                        // Tạo các option cho select
                        const options = ['Nam', 'Nữ', 'Khác'];
                        options.forEach(optionText => {
                            const option = document.createElement('option');
                            option.value = optionText;
                            option.textContent = optionText;
                            selectGender.appendChild(option);
                        });

                        // Thay thế input gender bằng select
                        genderInput.parentElement.replaceChild(selectGender, genderInput);
                    }
                  
                    birthdayInput.type = 'date';


                } else if(btnEdit.textContent === 'Hủy'){
                    btnSubmit.disabled = true;
                    btnSubmit.style.backgroundColor = '#ccc'; // Màu xám khi disabled
                    btnSubmit.style.cursor = 'not-allowed';

                    btnEdit.textContent = 'Chỉnh sửa thông tin'; 
                    btnEdit.style.backgroundColor = '#007bff'; // Màu xanh dương cho nút

                    inputs.forEach(input => {
                        input.setAttribute('readonly', 'true'); // Thêm readonly cho các input
                    });

                    // Ẩn input file
                    fileInput.setAttribute('hidden', 'true');

                    // Thay lại select gender thành input
                    const selectGender = document.querySelector('[name="gender"]');
                    const genderValue = '{{employee.gender}}'; 
                    if (selectGender) {
                        const inputGender = document.createElement('input');
                        inputGender.type = 'text';
                        inputGender.className = 'gender'
                        inputGender.id = 'gender';
                        inputGender.name = 'gender';
                        inputGender.value = genderValue;
                        inputGender.readOnly = true;
                        selectGender.parentElement.replaceChild(inputGender, selectGender);
                    }

                    birthdayInput.type = 'text';
                }
            });
        });
    </script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
          const imageInput = document.querySelector('#image_url');
          const imagePreview = document.querySelector('#profileImage');

          // Lắng nghe sự kiện change trên thẻ input file
          imageInput.addEventListener('change', function(event) {
              // Kiểm tra nếu người dùng đã chọn tệp
              const file = event.target.files[0];
              if (file) {
                  // Tạo một URL mới từ tệp người dùng chọn
                  const reader = new FileReader();
                  
                  reader.onload = function(e) {
                      // Thay đổi src của thẻ img thành ảnh được tải lên
                      imagePreview.src = e.target.result;
                  };
                  
                  // Đọc tệp ảnh
                  reader.readAsDataURL(file);
              }
          });
      });

