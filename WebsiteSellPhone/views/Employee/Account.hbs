    }

    .toggle-password {
        background-color: transparent !important;
        color: #007bff !important; /* Màu xanh cho nút mắt */
        font-size: 20px !important; /* Đảm bảo kích thước font đúng */
        border: none !important;
        cursor: pointer !important;
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        width: 6% !important;
    }

    .toggle-password:hover {
        color: #0056b3 !important; /* Màu khi hover */
    }

