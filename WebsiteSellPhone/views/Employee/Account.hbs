        color: #555;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"], input[type="email"], input[type="password"] {
        width: 100%;
        padding: 12px;
        margin-top: 5px;
        margin-bottom: 10px;
        box-sizing: border-box;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 14px;
    }

    input[type="text"]:focus, input[type="email"]:focus, input[type="password"]:focus {
        border-color: #28a745; /* Màu sắc khi focus vào input */
        outline: none;
    }

    button {
        padding: 12px;
        border: none;
        background-color: #28a745;
        color: white;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 48%; /* Set width 48% để tạo khoảng cách */
        margin-right: 4%;
    }

    button:hover {
        background-color: #218838;
    }

    button:disabled {
        background-color: #ccc;
        cursor: not-allowed;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
    }

    .form-actions .btn-submit {
        width: 48%;
    }

    .form-actions .btn-edit {
        width: 48%;
        background-color: #007bff;
    }

    .form-actions .btn-edit:hover {
        background-color: #0056b3;
    }
    /* Thay đổi con trỏ chuột khi hover qua input readonly */
    input[readonly] {
        cursor: default; /* Hoặc có thể dùng 'default' hoặc kiểu khác tùy ý */
    }

    .password-container {
        position: relative;
        display: flex;
