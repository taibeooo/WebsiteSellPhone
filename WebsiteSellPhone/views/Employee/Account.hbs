    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Lấy tất cả các nút toggle password
            const togglePasswordBtns = document.querySelectorAll('.toggle-password');

            // Lặp qua mỗi nút và gắn sự kiện click
            togglePasswordBtns.forEach(function(togglePasswordBtn) {
                togglePasswordBtn.addEventListener('click', function() {
                    // Lấy trường input mật khẩu liên kết với nút toggle này
                    const passwordInput = togglePasswordBtn.previousElementSibling;

                    // Kiểm tra xem mật khẩu hiện tại có đang ẩn hay không
                    const type = passwordInput.type === 'password' ? 'text' : 'password';
                    passwordInput.type = type; // Thay đổi kiểu input

                    // Thay đổi biểu tượng mắt
                    if (type === 'password') {
                        togglePasswordBtn.innerHTML = '<i class="fas fa-eye"></i>'; // Mắt mở
                    } else {
                        togglePasswordBtn.innerHTML = '<i class="fas fa-eye-slash"></i>'; // Mắt đóng
                    }
                });
            });
        });

    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Lấy các phần tử cần thiết
            const btnEdit = document.querySelector('.btn-edit'); 
            const btnSubmit = document.querySelector('.btn-submit');
            const formPasswordFields = document.querySelectorAll('.form-password'); 
            const toggleButtons = document.querySelectorAll('.toggle-password');

            // Lắng nghe sự kiện click trên nút "Đổi Mật Khẩu"
            btnEdit.addEventListener('click', function () {
                if (btnEdit.textContent === 'Đổi Mật Khẩu') {
                    // Hiển thị các trường mật khẩu
                    formPasswordFields.forEach(function (field) {
                        field.hidden = false;
                    });

                    btnSubmit.hidden = false;
                    btnSubmit.disabled = true;

                    btnEdit.textContent = 'Hủy';
                    btnEdit.style.backgroundColor = '#dc3545';

                } else {
                    // Ẩn các trường mật khẩu
                    formPasswordFields.forEach(function (field) {
                        field.hidden = true;
                    });

                    btnSubmit.hidden = true;
                    btnEdit.textContent = 'Đổi Mật Khẩu';
                    btnEdit.style.backgroundColor = '#007bff';
                }
            });
        });
    </script>
    <script>
        function checkPasswordMatch() {
            const passwordNew = document.getElementById('passwordNew');
            const passwordConfirm = document.getElementById('passwordConfirm');
            const passwordMatchError = document.getElementById('password-match-error');
            const btnSubmit = document.querySelector('.btn-submit');
            
            // Lắng nghe sự kiện khi người dùng nhập vào trường "Mật khẩu mới" hoặc "Nhập lại mật khẩu"
            passwordNew.addEventListener('input', validatePasswords);
            passwordConfirm.addEventListener('input', validatePasswords);

            function validatePasswords() {
                // So sánh mật khẩu mới và mật khẩu xác nhận
                if (passwordNew.value !== passwordConfirm.value || passwordNew.value === '' && passwordConfirm.value ==='') {
                    passwordMatchError.style.display = 'block'; 
                    btnSubmit.disabled = true; 
                } else {
                    passwordMatchError.style.display = 'none'; 
                    btnSubmit.disabled = false; 
                }
            }
        }

        // Gọi function khi DOM content được tải đầy đủ
        document.addEventListener('DOMContentLoaded', function () {
            checkPasswordMatch(); // Gọi hàm để kiểm tra mật khẩu khi người dùng nhập
        });
    </script>

