                            <div class="product-thumbnail mt-15">
                                <div class="thumb-menu owl-carousel nav tabs-area" role="tablist">
                                    <a class="active" data-toggle="tab" href="#thumb1">
                                        <img src="/img/imgproduct/{{product.image_url}}" alt="{{product.image_url}}"> <!-- Hiển thị ảnh thumbnail của sản phẩm -->
                                    </a>
                                </div>
                            </div>

                            <!-- Thumbnail image end -->
                        </div>
                        
                        <div class="col-lg-7">
                            <div class="thubnail-desc fix">
                                <div class="pro-price mtb-30">
                                <p class="d-flex align-items-center">
                                    <span class="price">
                                        <script>
                                            document.write((function(num) {
                                                return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.') + ' ₫';
                                            })({{product.retail_price}}));
                                        </script>
                                    </span> <!-- Hiển thị giá sản phẩm -->
                                </p>
                        </div>

                                
                                <p class="mb-20 pro-desc-details">{{product.description}}</p> <!-- Hiển thị mô tả sản phẩm -->
                                
                                <div class="box-quantity d-flex hot-product2">
                                    <form id="addToCartForm" action="/cart/add" method="POST">
                                        <input class="quantity mr-15" type="number" min="1" name="quantity" value="1"> <!-- Trường nhập số lượng -->
                                        <input type="hidden" name="productId" value="{{product._id}}"> <!-- ID sản phẩm -->
                                        <div class="pro-actions">
                                            <div class="actions-primary">
                                                <button type="submit" title="" data-original-title="Add to Cart"> + Add To Cart</button> <!-- Nút thêm vào giỏ hàng -->
                                            </div>
                                        </div>
                                    </form>
                                </div>


                                <script>
                                    document.getElementById('add-to-cart-button').addEventListener('click', function(event) {
                            event.preventDefault(); // Ngăn chặn hành vi mặc định của thẻ <a>

                            // Lấy thông tin từ form
                            const productId = document.getElementById('product-id').value;
                            const quantity =  document.getElementById('product-quantity').value;

                            // Gửi yêu cầu POST đến server để thêm sản phẩm vào giỏ hàng
                            fetch('/add-to-cart', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({
                                    productId: productId,
                                    quantity: quantity
                                })
                            })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error('Network response was not ok');
                                }
                                return response.json();
                            })
                            .then(data => {
                                console.log('Success:', data);
                                // Cập nhật UI giỏ hàng nếu cần
                                updateCartUI(data.cart); // Giả sử bạn có một hàm updateCartUI để cập nhật giao diện
                            })
                            .catch((error) => {
                                console.error('Error:', error);
                            });
                        });

                                </script>

                                
                                <div class="pro-ref mt-20">
                                    <p><span class="in-stock"><i class="ion-checkmark-round"></i> IN STOCK</span></p> <!-- Trạng thái sản phẩm -->
                                </div>
                                
                            </div>
                        </div>

