    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <h2>Chi tiết Hóa Đơn</h2>
        </div>

        <!-- Thông tin hóa đơn -->
        <div class="row mb-4">
          <div class="col-md-6">
            <h5>Thông tin khách hàng</h5>
            <p><strong>Tên khách hàng:</strong> {{invoice.customer_name}}</p>
            <p><strong>Số điện thoại:</strong> {{invoice.phone}}</p>
            <p><strong>Địa chỉ:</strong> {{invoice.customer_address}}</p>
          </div>
          <div class="col-md-6">
            <h5>Thông tin hóa đơn</h5>
            <p><strong>Mã hóa đơn:</strong> {{invoice._id}}</p>
            <p><strong>Ngày tạo:</strong> {{invoice.sale_date}}</p>
            <p><strong>Nhân viên tạo hóa đơn:</strong> {{invoice.staff_name}}</p>
          </div>
        </div>

        <!-- Danh sách sản phẩm -->
        <div class="row">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="thead-light">
                <tr>
                  <th>Tên sản phẩm</th>
                  <th>Số lượng</th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                <tr>
                  <td>{{this.name}}</td> <!-- Tên sản phẩm -->
                  <td>{{this.quantity}}</td> <!-- Số lượng -->
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>

        <!-- Thông tin thanh toán -->
        <div class="row mt-4">
          <div class="col-md-6">
            <p><strong>Tổng tiền:</strong> {{invoice.total_price}} ₫</p>
            <p><strong>Số tiền khách hàng đã đưa:</strong> {{invoice.amount_given}} ₫</p>
            <p><strong>Tiền thối lại:</strong> {{invoice.change_due}} ₫</p>
          </div>
        </div>
        <div class="text-center mt-3">
        <a href="/admin/invoices" class="btn btn-secondary">Quay lại danh sách hoá đơn</a>
      </div>
